<div class="auth" id="login">
    <div class="auth__header">
        <h1>{{login.HEADER.HEADING}}</h1>
        <p>{{login.HEADER.CONTENT}}</p>
    </div>
    <section class="auth__main">
        <form action="/" class="login__form" id="login__form" novalidate method="POST">
            <div class="form__group">
                <label for="email" class="form__label">{{login.MAIN.EMAIL}}</label>
                <input type="email" class="form__control" name="email" id="email" required>
                <p class="form__error" aria-live="assertive"></p>
            </div>
            <div class="form__group">
                <label for="password" class="form__label">{{login.MAIN.PASSWORD}}</label>
                <input type="password" class="form__control" name="password" id="password" required>
                <p class="form__error" aria-live="assertive"></p>
            </div>
            <button type="submit" class="btn btn-lg">{{login.MAIN.SUBMIT}}</button>
        </form>
    </section>
</div>